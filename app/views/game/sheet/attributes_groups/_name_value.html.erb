<%= content_tag :div, class: 'attributes-group', data: group.to_params do %>
  <%= render 'game/sheet/attributes_groups/group_title', group: group %>

  <table class="table table-condensed name-value-attributes" data-accept-edit-mode>
    <tbody>
      <% group.character_attributes.each do |attribute| %>
        <% if attribute.total.present? %>
          <%= render 'game/sheet/attributes_types/name_value_total', attribute: attribute %>
        <% else %>
          <%= render 'game/sheet/attributes_types/name_value', attribute: attribute %>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <% if group.source_type == 'list' %>
    <%= render 'game/sheet/attributes_groups/edit_panel', group: group %>
  <% end %>
<% end %>
