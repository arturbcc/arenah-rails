<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title).presence || 'Arenah Tsuki' %></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width" />

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <link rel="shortcut icon" href="/Content/Images/favicon.ico" type="image/x-icon" />
  <link rel="icon" href="/Content/Images/favicon.ico" type="image/ico" />
  <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,600,700" rel="stylesheet" />

  <% if @game.present? %>
    <link href="/games/<%= @game.slug %>/css/custom.css" rel="stylesheet" />
  <% end %>

  <%= yield :head %>
</head>
<body>
  <%= render 'shared/header', area: @area, game: @game, topic: @topic %>

  <div id="content">
    <%= yield %>

    <section id="game-modal">
      <%= render 'shared/modal' %>
    </section>
  </div>

  <%= render 'shared/footer' %>
  <%= render 'shared/hidden_fields' %>
  <%= render 'shared/tracking_scripts' %>

  <% if @game.present? %>
    <script type="text/javascript">
      ga('create', '< %= @game.GoogleAnalyticsCode %>', 'auto', { 'name': 'userTracker' });
    </script>
  <% end %>

  <script>
    <%= yield :javascripts %>
  </script>
</body>
</html>